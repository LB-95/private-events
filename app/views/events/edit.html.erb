<h1>Edit Event</h1>

<%= form_with model:@event do |f| %>
<div>
    <%= f.label "Title" %><br><br>
    <%= f.text_field :title, placeholder: "Title"%>
    
</div>
<br><br>

<div>
    <%= f.label "Date" %><br><br>
    <%= f.date_select :date %>
</div>
<br><br>

<div>
    <%= f.label "Location" %><br><br>
    <%= f.text_field :location, placeholder: "Location"%>
    >
</div>
<br><br>

<div>
    <%= f.label "Descripion" %><br><br>
    <%= f.text_area :description, placeholder: "Descripion"%>
    
</div>
<br><br>

<div>
    <%= f.submit "Submit" %>
</div>   
<% end %>